@model IEnumerable<iAgenda.Models.Person>

@{
    ViewData["Title"] = "Index";
}

<p>
    <h4>Υπάλληλοι</h4>
    <a class="btn btn-outline-secondary" asp-action="Create">Πατήστε εδώ για εισαγωγή υπαλλήλου</a>
</p>


<table class="table table-bordered table-hover table-striped">
    <thead class="text-white table table-dark">
        <tr>
            <th>
                @Html.Label("ΟΝΟΜΑΤΕΠΩΝΥΜΟ")
            </th>
            <th>
                @Html.Label("ΕΣ. ΤΗΛΕΦΩΝΟ")
            </th>
            <th>
                @Html.Label("ΚΙΝ. ΤΗΛΕΦΩΝΟ 1")
            </th>
            <th>
                @Html.Label("ΚΙΝ. ΤΗΛΕΦΩΝΟ 2")
            </th>
            <th>
                @Html.Label("ΤΕΤΡΑΨΗΦΙΟ")
            </th>
            <th>
                @Html.Label("ΣΗΜΕΙΩΣΕΙΣ")
            </th>
            <th>
                @Html.Label("EMAIL")
            </th>
            <th>
                @Html.Label("ΤΜΗΜΑ")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InternalPhone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mobile1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mobile2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FourDigitsCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Departments.Description)
                </td>
                <td>
                    <partial name="_tableButtons" model="item" />
                </td>
            </tr>
        }
    </tbody>
</table>
