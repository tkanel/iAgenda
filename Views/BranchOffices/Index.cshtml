@model IEnumerable<iAgenda.Models.BranchOffice>

@{
    ViewData["Title"] = "Index";
}

<p>
    <h4>Υποκαταστήματα</h4>
    <a class="btn btn-outline-secondary" asp-action="Create">Πατήστε εδώ για εισαγωγή υποκαταστήματος</a>
</p>


<table class="table table-bordered table-hover table-striped">
    <thead class="text-white table table-dark">
        <tr>
            <th>
                @Html.Label("ΟΝΟΜΑ ΥΠΟΚΑΤΑΣΤΗΜΑΤΟΣ")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <partial name="_tableButtons" model="item" />
                </td>
            </tr>
        }
    </tbody>
</table>
